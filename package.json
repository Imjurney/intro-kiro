{
  "name": "kiro-landing-page",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:analyze": "tsc -b && vite build --mode analyze",
    "build:stats": "tsc -b && vite build --mode production && npx vite-bundle-analyzer dist/stats.html",
    "lint": "eslint .",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "perf:audit": "pnpm build && npx lighthouse http://localhost:4173 --output=html --output-path=./lighthouse-report.html --preset=desktop",
    "perf:mobile": "pnpm build && npx lighthouse http://localhost:4173 --output=html --output-path=./lighthouse-mobile.html --preset=mobile",
    "perf:bundle": "pnpm build && npx bundlesize",
    "perf:full": "pnpm build && pnpm perf:audit && pnpm perf:mobile && pnpm perf:bundle",
    "optimize:deps": "pnpm dedupe && pnpm prune && pnpm store prune",
    "optimize:images": "npx @squoosh/cli --webp '{quality:85}' --avif '{quality:80}' public/**/*.{jpg,jpeg,png}",
    "clean": "rm -rf dist node_modules/.vite",
    "clean:install": "pnpm clean && pnpm install"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "gsap": "^3.13.0",
    "lucide-react": "^0.540.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.5.0",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@tailwindcss/vite": "^4.1.12",
    "@types/node": "^20.0.0",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^5.0.0",
    "bundlesize": "^0.18.2",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "tailwindcss": "^4.1.12",
    "terser": "^5.43.1",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "vite": "^6.0.0",
    "vite-bundle-analyzer": "^0.11.1"
  },
  "bundlesize": [
    {
      "path": "./dist/assets/*.js",
      "maxSize": "300 kB",
      "compression": "gzip"
    },
    {
      "path": "./dist/assets/*.css",
      "maxSize": "50 kB",
      "compression": "gzip"
    }
  ],
  "engines": {
    "node": ">=18.0.0 <22.0.0"
  }
}
