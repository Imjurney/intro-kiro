# pnpm 최적화 설정
# 의존성 중복 제거 및 성능 최적화

# 호이스팅 설정 - 중복 제거
hoist-pattern[]=*

# 심링크 사용으로 디스크 공간 절약
symlink=true

# 캐시 최적화
store-dir=~/.pnpm-store
cache-dir=~/.pnpm-cache

# 빠른 설치를 위한 병렬 처리
child-concurrency=5
network-concurrency=16

# 불필요한 파일 제외
ignore-scripts=false
prefer-offline=true

# 자동 설치 확인
auto-install-peers=true
strict-peer-dependencies=false

# 성능 최적화
resolution-mode=highest